<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>
        <%= title %>
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body style="background-image:url('/images/photo.jpg');background-size:cover">
    <nav class="navbar navbar-inverse">
        <ul class="nav navbar-nav">
                <li><a href="#">Animals</a></li>
                <li><a href="/homePage/food">Food</a></li>
                <li><a href="/homePage/worker">Worker</a></li>
                <li><a href="/homePage/field">Field</a></li>
                <li><a href="/homePage/visitor">Visitor</a></li>
        </ul>
        <p class="navbar-text">Animal</p>
    </nav>

    <div class="container">
        <h3>Details of Animal</h3>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Animal ID</th>
                    <th scope="col">LifeSpan</th>
                    <th scope="col">Type</th>
                    <th scope="col">Worker Id</th>
                </tr>
            </thead><br>
            <% for(var i=0; i < animal.length; i++) { %>
            <tr>
                <td>
                    <%= animal[i].name %>
                </td>
                <td>
                    <%= animal[i].animal_id %>
                </td>
                <td>
                    <%= animal[i].lifespan %>
                </td>
                <td>
                    <%= animal[i].type %>
                </td>
            </tr>
            <% } %>
        </table>
        <form action="/homePage/animal/insertAnimals" method="get">
        <input type="submit" value="Insert Animals" class="btn btn-primary">
        </form>
    </div>
</body>

</html>